server {
    listen       80;
    listen  [::]:80;
    server_name  localhost;

    # 1. Handle huge cookies/tokens
    large_client_header_buffers ${LARGE_CLIENT_HEADER_BUFFERS};

    # 2. Handle large uploads (Multimodal LLMs / Video Uploads)
    client_max_body_size ${CLIENT_MAX_BODY_SIZE};

    location / {
        proxy_pass http://${TARGET_HOST}:${TARGET_PORT};

        # --- Protocol Support ---
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;

        # --- Behavior ---
        proxy_buffering ${PROXY_BUFFERING};
        proxy_request_buffering ${PROXY_BUFFERING};

        # --- Video/Audio Streaming Support ---
        # Allows players to "seek" even if backend struggles with ranges
        proxy_force_ranges ${PROXY_FORCE_RANGES};

        # --- Timeouts (Websockets & LLMs) ---
        # Affects how long a WS connection can sit idle
        proxy_connect_timeout ${PROXY_TIMEOUT};
        proxy_send_timeout ${PROXY_TIMEOUT};
        proxy_read_timeout ${PROXY_TIMEOUT};
        send_timeout ${PROXY_TIMEOUT};

        # --- Tracking ---
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}
